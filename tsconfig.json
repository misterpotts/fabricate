{
  "compilerOptions": {
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": true,
    "baseUrl": "./",
    "rootDirs": ["./src","./test"],
    "outDir": "./dist",
    "strict": true,
    "strictNullChecks": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "noErrorTruncation": true,
    "target": "es2021",
    "lib": [
      "ES2021",
      "dom"
    ],
    "types": [
      "node",
      "sinon",
      "jest",
      "svelte",
      "@league-of-foundry-developers/foundry-vtt-types",
      "jquery"
    ],
    "typeRoots": [
      "./typings"
    ],
    "allowUmdGlobalAccess": true
  },
  "include": ["src/**/*.d.ts", "src/**/*.ts", "src/**/*.svelte", "src/**/*.js", "typings/global.d.ts"],
  "exclude": ["node_modules"],
  "files": [
    "./typings/global.d.ts"
  ],
  "ts-node": {
    "files": true,
    "transpileOnly": false
  },
  "references": [{ "path": "./tsconfig.node.json" }]
}