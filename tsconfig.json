{
  "compilerOptions": {
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "baseUrl": "./",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "strictNullChecks": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "noErrorTruncation": true,
    "target": "ES6",
    "lib": ["DOM", "ES6", "ES2017", "ES2018", "ES2019"],
    "types": [
      "node",
      "mocha",
      "chai",
      "sinon",
      "jest",
      "handlebars",
      "@league-of-foundry-developers/foundry-vtt-types",
      "@league-of-foundry-developers/foundry-vtt-dnd5e-types"
    ],
    "typeRoots": [
      "./typings"
    ],
    "allowUmdGlobalAccess": true
  },
  "include": ["./src/**/*.ts", "./typings/**/*.ts"],
  "exclude": ["node_modules", "./gulpfile.ts"],
  "files": [
    "./typings/global.d.ts"
  ],
  "ts-node": {
    "files": true,
    "transpileOnly": true
  }
}