<form>

    <div class="form-group">
        <label for="name">{{localize "fabricate.editCraftingSystemDetailDialog.name.label"}}</label>
        <div class="form-fields">
            <input type="text" name="name" placeholder="{{localize "fabricate.editCraftingSystemDetailDialog.name.placeholder"}}" value="{{details.name}}" autofocus="">
        </div>
    </div>

    <div class="form-group">
        <label for="author">{{localize "fabricate.editCraftingSystemDetailDialog.author.label"}}</label>
        <div class="form-fields">
            <input type="text" name="author" placeholder="{{localize "fabricate.editCraftingSystemDetailDialog.author.placeholder"}}" value="{{details.author}}" autofocus="">
        </div>
    </div>

    <div class="form-group">
        <label for="summary">{{localize "fabricate.editCraftingSystemDetailDialog.summary.label"}}</label>
        <div class="form-fields">
            <textarea name="summary" rows="3" cols="50" placeholder="{{localize "fabricate.editCraftingSystemDetailDialog.summary.placeholder"}}">{{details.summary}}</textarea>
        </div>
    </div>

    <div class="form-group">
        <label for="description">{{localize "fabricate.editCraftingSystemDetailDialog.description.label"}}</label>
        <div class="form-fields">
            <textarea name="description" rows="10" cols="50" placeholder="{{localize "fabricate.editCraftingSystemDetailDialog.description.placeholder"}}">{{details.description}}</textarea>
        </div>
    </div>

    <button type="submit"><i class="fa-regular fa-circle-check"></i> {{localize "fabricate.editCraftingSystemDetailDialog.submit"}}</button>

</form>