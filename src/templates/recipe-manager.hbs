<div class="fabricate-recipe-manager">

    <h2 class="fabricate-recipe-name">{{recipe.name}}</h2>

        <div class="fabricate-recipe-image">
            <img src="{{recipe.imageUrl}}" />
        </div>

        <div class="fabricate-recipe-essence-editor">
            <h3>{{localize "fabricate.RecipeManagerApp.essences.title"}}</h3>
            <p>{{localize "fabricate.RecipeManagerApp.essences.instructions"}}</p>
            <div class="fabricate-inline-part-list">
                {{#each recipe.essences}}
                    <div class="fabricate-essence" data-tooltip="{{essence.tooltip}}" data-essence-id="{{essence.id}}" data-recipe-id="{{../recipe.id}}" data-action="editRecipeEssence">
                        <span>{{amount}} <i class="{{essence.iconCode}}"></i> {{essence.name}}</span>
                    </div>
                {{/each}}
            </div>
        </div>

        <div class="fabricate-recipe-ingredients-editor">
            <h3>{{localize "fabricate.RecipeManagerApp.ingredients.title"}}</h3>
            <p>{{localize "fabricate.RecipeManagerApp.ingredients.instructions"}}</p>
            <div class="fabricate-recipe-ingredient-options">
                {{#each recipe.ingredientOptions.members}}
                    <div class="fabricate-component-list">
                        {{#each units}}
                            <div class="fabricate-component fabricate-component-salvage-choice" data-salvage-id="{{part.id}}" data-tooltip="{{part.name}}" data-recipe-id="{{../../recipe.id}}" data-action="editRecipeIngredient">
                                <img src="{{part.imageUrl}}">
                                <div class="fabricate-info">
                                    <span class="fabricate-detail">{{quantity}}</span>
                                </div>
                            </div>
                        {{/each}}
                    </div>
                {{/each}}
                <div class="fabricate-add-recipe-ingredient-option">
                    <i class="fa-solid fa-square-plus"></i>
                </div>
            </div>
        </div>

    <div class="fabricate-recipe-results-editor">
        <h3>{{localize "fabricate.RecipeManagerApp.results.title"}}</h3>
        <p>{{localize "fabricate.RecipeManagerApp.results.instructions"}}</p>
        <div class="fabricate-recipe-result-options">
            {{#each recipe.resultOptions.members}}
                <div class="fabricate-component-list">
                    {{#each units}}
                        <div class="fabricate-component fabricate-component-salvage-choice" data-salvage-id="{{part.id}}" data-tooltip="{{part.name}}" data-recipe-id="{{../../recipe.id}}" data-action="editReciperesult">
                            <img src="{{part.imageUrl}}">
                            <div class="fabricate-info">
                                <span class="fabricate-detail">{{quantity}}</span>
                            </div>
                        </div>
                    {{/each}}
                </div>
            {{/each}}
            <div class="fabricate-add-recipe-result-option">
                <i class="fa-solid fa-square-plus"></i>
            </div>
        </div>
    </div>

</div>