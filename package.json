{
  "name": "fabricate",
  "version": "1.0.0",
  "description": "A system-agnostic, flexible crafting module for FoundryVT",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "releaseLocal": "npm run test && npm run build && node scripts/releaseLocal.cjs",
    "build": "vite build",
    "test": "jest",
    "serve": "vite",
    "coverageTest": "jest --collect-coverage --collect-coverage-from='./src/**/*.ts'",
    "jekyll": "cd docs && bundle exec jekyll serve",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "commitlint": "commitlint --edit",
    "prepare": "husky"
  },
  "author": "Matthew Potts",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^19.2.1",
    "@commitlint/config-conventional": "^19.1.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.3",
    "@skeletonlabs/skeleton": "^3.1.3",
    "@skeletonlabs/skeleton-svelte": "^1.2.3",
    "@skeletonlabs/tw-plugin": "^0.4.1",
    "@sveltejs/vite-plugin-svelte": "^5.1.0",
    "@tailwindcss/postcss": "^4.1.10",
    "@tsconfig/svelte": "^5.0.4",
    "@types/jest": "^30.0.0",
    "@types/jquery": "^3.5.32",
    "@types/lodash": "^4.17.18",
    "autoprefixer": "^10.4.21",
    "fs-extra": "^11.3.0",
    "husky": "^9.0.11",
    "jest": "^30.0.4",
    "less": "^4.3.0",
    "lodash": "^4.17.21",
    "postcss": "^8.5.6",
    "postcss-import": "^16.1.1",
    "postcss-nesting": "^13.0.2",
    "semantic-release": "^24.2.5",
    "svelte": "^5.35.2",
    "svelte-check": "^4.2.2",
    "tailwindcss": "^4.1.10",
    "ts-jest": "^29.4.0",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "vite": "^6.3.5"
  },
  "dependencies": {
    "@types/node": "^24.0.15"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
